package application;
	
import javafx.application.Application;
import javafx.beans.value.ChangeListener;
import javafx.beans.value.ObservableValue;
import javafx.event.EventHandler;
import javafx.geometry.Insets;
import javafx.geometry.Orientation;
import javafx.stage.Stage;
import javafx.scene.Scene;
import javafx.scene.Group;
import javafx.scene.control.Alert;
import javafx.scene.control.Button;
import javafx.scene.control.ComboBox;
import javafx.scene.control.Label;
import javafx.scene.control.TextArea;
import javafx.scene.control.TextField;
import javafx.scene.input.MouseEvent;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import HashDictionary.ClosedHashing;
import HashDictionary.HashTable;
import HashDictionary.OpenHashing;


public class Main extends Application {
	
	private HashTable hashtable = null;
	@Override
	public void start(Stage primaryStage) {
		try {
			primaryStage.setTitle("Хеширование");
			primaryStage.setResizable(false);
			Scene scene = new Scene(new Group(), 320, 350);
			
			Alert alert = new Alert(Alert.AlertType.INFORMATION);
			alert.setHeaderText(null);
			
			ComboBox<String> comb = new ComboBox<String>();
			comb.getItems().addAll("Открытое хеширование", "Закрытое хеширование");
			comb.setStyle("-fx-pref-width: 300;");
			comb.setEditable(false);
			comb.setOnAction((event) -> {
				if (comb.getSelectionModel().getSelectedItem().equals("Открытое хеширование")) {
					hashtable = new OpenHashing(20);
				}	
				else {
					if (comb.getSelectionModel().getSelectedItem().equals("Закрытое хеширование")) {
						hashtable = new ClosedHashing(20);
					}
				}
			});
			
			TextField textf = new TextField();
			textf.setStyle("-fx-pref-width: 300;");
			
			TextArea texta = new TextArea();
			texta.setStyle("-fx-pref-width: 300;");
			
			Button butadd = new Button("Добавить");
			
			butadd.setOnAction((event) -> {
				hashtable.Add(textf.getText());
				String[] arr = hashtable.ViewTable();
				for (int i = 0; i < arr.length; i++)
					texta.appendText(arr[i] + "\n");
			});
			
			Button butfind = new Button("Найти");
			Button butdel = new Button("Удалить");
			
			HBox hbox = new HBox();
			hbox.setSpacing(8);
			hbox.getChildren().addAll(butadd, butfind, butdel);
						
			VBox vbox = new VBox();
			vbox.setPadding(new Insets(10));
			vbox.setSpacing(8);
			vbox.getChildren().addAll(new Label("Выберите операцию:"), comb, new Label("Введите слово:"), textf, texta, hbox);
						
			Group root = (Group)scene.getRoot();
			root.getChildren().add(vbox);
			
			primaryStage.setScene(scene);
			primaryStage.show();
				
		} catch(Exception e) {
			e.printStackTrace();
		}
	}
	
	public static void main(String[] args) {
		launch(args);
	}
}
