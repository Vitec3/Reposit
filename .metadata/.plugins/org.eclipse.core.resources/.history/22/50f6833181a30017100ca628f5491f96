package application;
	
import javafx.application.Application;
import javafx.geometry.Insets;
import javafx.geometry.Orientation;
import javafx.stage.Stage;
import javafx.scene.Scene;
import javafx.scene.Group;
import javafx.scene.control.Button;
import javafx.scene.control.ComboBox;
import javafx.scene.control.Label;
import javafx.scene.control.TextArea;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import HashDictionary.OpenHashing;


public class Main extends Application {
	@Override
	public void start(Stage primaryStage) {
		try {
			primaryStage.setTitle("Хеширование");
			primaryStage.setResizable(false);
			Scene scene = new Scene(new Group(), 320, 280);
			
			ComboBox<String> comb = new ComboBox<String>();
			comb.getItems().addAll("A","B","C");
			comb.setStyle("-fx-pref-width: 300;");
			comb.setEditable(true);
			
			TextArea texta = new TextArea();
			texta.setStyle("-fx-pref-width: 300;");
			
			Button butadd = new Button("Добавить");
			Button butfind = new Button("Найти");
			Button butdel = new Button("Удалить");
			
			HBox hbox = new HBox();
			hbox.setSpacing(8);
			hbox.getChildren().addAll(butadd, butfind, butdel);
						
			VBox vbox = new VBox();
			vbox.setPadding(new Insets(10));
			vbox.setSpacing(8);
			vbox.getChildren().addAll(new Label("Выберите операцию:"), comb, texta, hbox);
						
			Group root = (Group)scene.getRoot();
			root.getChildren().add(vbox);
			
			primaryStage.setScene(scene);
			primaryStage.show();
		} catch(Exception e) {
			e.printStackTrace();
		}
	}
	
	public static void main(String[] args) {
		launch(args);
	}
}
